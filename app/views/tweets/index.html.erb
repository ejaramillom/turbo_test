<%= turbo_stream_from "tweets" %>
<%= turbo_frame_tag "tweets" do %>
  <p style="color: green"><%= notice %></p>

  <% content_for :title, "Tweets" %>

  <h1>Tweets</h1>

  <div id="tweets">
    <%= @tweets.each do |tweet| %>
      <%= render "tweets/tweet", tweet: tweet %>
      <p>
        <%= link_to "Show this tweet", tweet_path(tweet) %>
      </p>
    <% end %>
  </div>
  <br>
  <%= link_to "New tweet", new_tweet_path %>
<% end %>

